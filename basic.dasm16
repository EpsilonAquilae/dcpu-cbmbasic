:ROMA3B8        JSR REASON      ; garbage collect?
                SET [STREND], A ; returned start of free RAM
:ROMA3BF        SET B, [RAM5F] ; source start address
                SET J, [RAM5A] ; source end address
                SET I, [RAM58] ; destimation end address
                IFE J, B
                    RTS
:ROMA3BG        STD [I], [J]
                IFN J, B
                    SET PC, ROMA3BG
                RTS
