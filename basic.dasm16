;Find Array Element or Create New Array in RAM
;
;This routine searches for an array.  If it is found, the subscript
;value is checked to see if it is valid, and pointers to the array and
;element of the array are set.  If it is not found, the array is
;created, and the pointers set.
:ISARY
:ROMB1D1    SET A, [DIMFLG]
			BOR A, [INTFLG]
			SET PUSH, A
			SET A, [VALTYP]
			SET PUSH, A
			SET Y, 0
:ROMB1DB	SET PUSH, Y  ; push... subscript?
			SET PUSH, [VARNAM]
			SET PUSH, [VARNAM+1]
			JSR INTIDX ; get subscript
			SET [VARNAM+1], POP
			SET [VARNAM], POP
			SET Y, A
			; swap address out
			SET B, PICK 1
			SET PICK 1, [RAM64]
			SET PEEK, B
			ADD Y, 1 ; ?
			JSR CHRGOT
			IFE A, CBM_COMMA
			    JMP ROMB1DB
			SET [COUNT], Y
			JSR CHKCLS
			SET [VALTYP], POP
			SET [INTFLG], POP
			AND A, 0x7F
			SET [DIMFLG], A
; ----------------------------------------------------------------------------
; SEARCH ARRAY TABLE FOR THIS ARRAY NAME
; ----------------------------------------------------------------------------
			SET A, [ARYTAB]
:ROMB21C	SET [RAM5F], A    ; todo: optimize away RAM5F?
			; checked all variables
			IFE [RAM5F], [STREND]
				JMP MAKE_NEW_ARRAY
			SET Y, [RAM5F]
			; check for name match
			IFE [VARNAM], [Y]
			    IFE [VARNAM+1], [Y+1]
			        JMP USE_OLD_ARRAY
			SET A, [Y+2]  ; get size of current item
			ADD A, Y      ; derive location of next item
			JMP ROMB21C
			

